{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "COBOL: Build",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "COBOL: Run",
      "type": "shell",
      "command": "make run",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "COBOL: Clean",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "COBOL: List programs",
      "type": "shell",
      "command": "make list",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
